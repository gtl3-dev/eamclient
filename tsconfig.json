{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/masterdata/@newrec/page.tsx",
    "app/components/ConfirmDialog.jsx",
    "app/components/FormField.jsx",
    "app/masterdata/assetgrp/AssetGrpEdit.jsx",
    "app/lib/session.js",
    "app/components/ErrorModal.jsx",
    "app/reports/dep/page.jsx",
    "app/masterdata/assetitems/AssetItemList.tsx"
  ],
  "exclude": ["node_modules"]
}
